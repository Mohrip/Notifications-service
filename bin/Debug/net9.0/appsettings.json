{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "NotificationsService.Infrastructure.Kafka": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=notifications.db"
  },
  "Kafka": {
    "BootstrapServers": "",
    "GroupId": "notification-service",
    "RetryAttempts": 3,
    "RetryDelayMs": 1000,
    "Topics": {
      "NotificationEvents": "notification-events",
      "NotificationRetries": "notification-retries", 
      "NotificationDLQ": "notification-dlq"
    }
  }
}